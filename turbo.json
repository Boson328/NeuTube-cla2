{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "pipeline": {
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**", "packages/backend/dist/**", "packages/frontend/dist/**"]
      },
      "lint": {
        "dependsOn": ["^lint"]
      },
      "dev": {
        "cache": false,
        "persistent": true
      },
      "test": {
        "cache": false
      }
    }
  }